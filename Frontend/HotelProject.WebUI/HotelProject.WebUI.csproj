<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(RunConfiguration)' == 'http' " />
  <ItemGroup>
    <PackageReference Include="Microsoft.EntityFrameworkCore" Version="7.0.0" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.Design" Version="7.0.0">
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
    <PackageReference Include="MySql.EntityFrameworkCore" Version="7.0.0" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.Tools" Version="7.0.0">
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
    <PackageReference Include="Microsoft.VisualStudio.Web.CodeGeneration.Design" Version="7.0.11" />
  </ItemGroup>
  <ItemGroup>
    <None Remove="Views\AdminLayout\" />
    <None Remove="Views\Staff\" />
  </ItemGroup>
  <ItemGroup>
    <Folder Include="Views\AdminLayout\" />
    <Folder Include="Views\Staff\" />
    <Folder Include="wwwroot\Template\" />
    <Folder Include="wwwroot\Template\js\" />
    <Folder Include="wwwroot\Template\css\" />
    <Folder Include="wwwroot\Template\icons\" />
    <Folder Include="wwwroot\Template\images\" />
  </ItemGroup>
  <ItemGroup>
    <Content Remove="wwwroot\Template\" />
    <Content Remove="wwwroot\Template\js\" />
    <Content Remove="wwwroot\Template\css\" />
    <Content Remove="wwwroot\Template\icons\" />
    <Content Remove="wwwroot\Template\images\" />
  </ItemGroup>
</Project>
