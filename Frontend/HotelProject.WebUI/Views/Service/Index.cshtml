@model List<ResultServiceDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}



<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Title</th>
        <th>Description</th>
        <th>Update</th>
        <th>Delete</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ServiceID</td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td><a href="/Service/UpdateService/@item.ServiceID" class="btn btn-outline-warning">Update</a></td>
            <td><a href="/Service/DeleteService/@item.ServiceID" class="btn btn-outline-danger">Delete</a></td>

        </tr>
    }
</table>
<a href="/Service/AddService/" class="btn btn-outline-info">Add New Service </a>


