@model CreateServiceDto
@{
    ViewData["Title"] = "AddService";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form method="post">

    <input type="text" asp-for="ServiceIcon" class="form-control" placeholder="Icon" />
    <span asp-validation-for="ServiceIcon" class="text-danger"></span>
    <br />
    <input type="text" asp-for="Title" class="form-control" placeholder="Service Title" />
    <span asp-validation-for="Title" class="text-danger"></span>
    <br />
    <input type="text" asp-for="Description" class="form-control" placeholder="Service Description" />
    <span asp-validation-for="Description" class="text-danger"></span>
    <br />
    <button class="btn btn-outline-primary">Submit</button>
</form>

